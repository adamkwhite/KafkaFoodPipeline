[flake8]
# Flake8 configuration for KafkaFoodPipeline
# Aligns with Ruff configuration in pyproject.toml
# E203: whitespace before ':' (conflicts with Black)
# E501: line too long (handled by Black)
# W503: line break before binary operator (conflicts with Black)

max-line-length = 88
extend-ignore = E203,E501,W503

per-file-ignores =
    __init__.py:F401

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    kafka-venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
